<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/latar">
    tools:context="com.rpl.kelompok1.gelolaundry.Activities.MenuLaundryActivity">

    <TextView
        android:id="@+id/textViewJudul"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="Menu Laundry "
        android:textColor="@color/cardview_dark_background"
        android:textSize="30sp"
        android:layout_marginStart="80dp"
        android:layout_above="@+id/textViewProfile"
        android:layout_alignStart="@+id/btnPesanKeluhan"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/textViewProfile"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"

        android:padding="20dp"
        android:text="Update Profile"
        android:textColor="@color/Judul"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textViewJudul"
        android:layout_marginStart="12dp" />

    <Button
        android:id="@+id/btnSignOut"
        style="@style/btnStyleOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="19dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/colorAccent"
        android:onClick="onClick"
        android:text="Sign Out"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textViewJudul"
        android:layout_marginEnd="21dp" />

    <Button
        android:id="@+id/btnPesanKeluhan"
        style="@style/btnStyleOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/btnSignOut"
        android:layout_alignBottom="@+id/btnSignOut"
        android:layout_marginEnd="28dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_toStartOf="@+id/btnLihatOrder"
        android:background="@color/colorAccent"
        android:onClick="onClick"
        android:text="Lihat Keluhan" />

    <Button
        android:id="@+id/btnLihatOrder"
        style="@style/btnStyleOrange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:background="@color/colorAccent"
        android:onClick="onClick"
        android:text="Order"
        android:layout_alignBaseline="@+id/btnSignOut"
        android:layout_alignBottom="@+id/btnSignOut"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="139dp" />


</RelativeLayout>