<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/latar"
    android:weightSum="1">
    tools:context="com.rpl.kelompok1.gelo.Activities.MenuCustomerActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnInformasiTempatLaundry"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        android:text="Laundry Menu "
        android:textColor="@color/Like"
        android:textSize="56sp"
        android:layout_weight="0.28" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnOrder"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="110dp"
            android:layout_height="90dp"

            android:layout_alignEnd="@+id/btnPeta"
            android:layout_alignStart="@+id/btnPeta"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/maps"
            android:onClick="onClick" />


        <Button
            android:id="@+id/btnPesanKeluhan"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_alignStart="@+id/btnInformasiTempatLaundry"
            android:layout_below="@+id/btnOrder"
            android:layout_gravity="bottom"
            android:layout_marginTop="96dp"
            android:background="@drawable/order"
            android:onClick="onClick" />

        <Button
            android:id="@+id/btnInformasiTempatLaundry"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/btnPesanKeluhan"
            android:layout_alignParentEnd="true"

            android:layout_marginEnd="27dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/info"
            android:onClick="onClick" />

        <Button
            android:id="@+id/btnPeta"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="100dp"
            android:layout_height="100dp"


            android:layout_alignBottom="@+id/btnPesanKeluhan"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnPesanKeluhan"
            android:layout_gravity="bottom"
            android:layout_marginStart="11dp"
            android:background="@drawable/keluhan"
            android:onClick="onClick" />
    </RelativeLayout>
</LinearLayout>

